@model ResumeBuilder.Models.Resume

@{
    ViewData["Title"] = "Delete Resume";
}

<h2>Delete Resume</h2>

<div class="alert alert-danger">
    Are you sure you want to delete the resume for <strong>@Model.FullName</strong>?
</div>

<form method="post" action="/Resume/DeleteConfirmed">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="/Resume/Index" class="btn btn-secondary">Cancel</a>
</form>

