@model IEnumerable<ResumeBuilder.Models.Resume>

@{
    ViewData["Title"] = "Resumes";
}

<h1>Resumes</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a href="/Resume/ViewResume/@item.Id">View</a> |
                    <a href="/Resume/PrintResume/@item.Id" target="_blank">Print</a> |
                    <a href="/Resume/Delete/@item.Id" class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Resume/Create" class="btn btn-primary mt-3">Create New Resume</a>
